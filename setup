#!/bin/bash

# Define colors
BLUE="\033[34m"
GREEN="\033[32m"
RED="\033[31m"
NC="\033[0m" # No Color

# Move 'darkpak' binary to a directory in $PATH as 'paktool'
echo -e "${BLUE}[*] Moving 'darkpak' to /usr/bin as 'paktool'...${NC}"
cp darkpak /data/data/com.termux/files/usr/bin/paktool || { 
    echo -e "${RED}Failed to copy 'darkpak'. Exiting...${NC}"; 
    exit 1; 
}

# Make 'paktool' executable
echo -e "${BLUE}[*] Making 'paktool' executable...${NC}"
chmod +x /data/data/com.termux/files/usr/bin/paktool || { 
    echo -e "${RED}Failed to set executable permissions for 'paktool'. Exiting...${NC}"; 
    exit 1; 
}

# Completion message
echo -e "${GREEN}[âœ”] Setup complete! You can now execute the tool by typing 'paktool'.${NC}"
